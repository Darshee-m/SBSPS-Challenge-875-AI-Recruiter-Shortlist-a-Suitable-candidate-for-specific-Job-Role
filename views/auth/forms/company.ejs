<!DOCTYPE html>
<html>
  <%- include('../../components/head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/landing.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css" />
  <body>
    <%- include('../../components/navbar') -%>
    <div class="landing-main">
      <!-- Banner -->
      <section id="banner">
        <div class="inner">
          <h2 class="major special">
            <span class="landing-headline">
              Tell us more about you!
            </span>
          </h2>
          <ul class="actions special stacked">
            <li>
              <div class="container">
                <div class="row">
                  <div class="col-md-12">
                    <form action="/account/new/user/info" method="POST">
                      <h3 style="color: black; text-align: left;">GENERAL</h3>
                      <div class="form-group">
                        <label for="website">Company Name*</label>
                        <input type="name" class="form-control" id="name" placeholder="Enter the company name" name="name" />
                      </div>
                      <div class="form-group">
                        <label for="website">Website*</label>
                        <input type="url" class="form-control" id="website" placeholder="Enter the URL of your website" name="website" />
                      </div>
                      <div class="form-group">
                        <label for="website">Email*</label>
                        <input type="email" class="form-control" id="email" placeholder="Enterthe comapny email" name="email" />
                      </div>
                      <div class="form-group">
                        <label for="website">Avatar*</label>
                        <input type="file" class="form-control" id="avatar" placeholder="Company Logo" name="avatar" />
                      </div>
                     
                      <div class="form-group">
                        <label for="expertise">Company size*</label>
                        <input type="text" class="form-control" id="company-size" placeholder="(eg. 100)" name="company-size" required />
                      </div>
                      <div class="form-group">
                        <label for="summary">Company Description*</label>
                        <textarea class="form-control" id="summary" placeholder="A short paragraph describing your company" name="summary" required></textarea>
                      </div>
                      <button type="submit" class="button primary btn btn-primary">
                        Submit
                      </button>
                      <button type="reset" style="background-color: red;" class="button btn btn-primary">
                        Reset
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </section>
    </div>
    <div id="notify_message" class="notify_message-success"></div>
  </body>

  <script src="/scripts/vendor/breakpoints.min.js"></script>
  <script src="/scripts/vendor/browser.min.js"></script>
  <script src="/scripts/vendor/classie.js"></script>
  <script src="/scripts/vendor/main.js"></script>
  <script src="/scripts/vendor/jquery.scrolly.min.js"></script>
  <script src="/scripts/util.js"></script>
  <script src="/scripts/menu-form.js"></script>
</html>
