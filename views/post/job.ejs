<!DOCTYPE html>
<html>
  <%- include('../components/head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/landing.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css" />
  <body>
    <%- include('../components/navbar') -%>
    <div class="landing-main">
      <!-- Banner -->
      <section id="banner">
        <div class="inner">
          <ul class="actions special stacked">
            <li>
              <div class="container">
                <div class="row">
                  <div class="col-md-12">
                    <form action="/post/job" method="post">
                      <h3 style="color: black; text-align: left;">CREATE JOB OPENING</h3>
                      <div class="form-group">
                        <label for="role">Role*</label>
                        <input type="name" class="form-control" id="role" placeholder="Enter the role for the job here" name="role" required/>
                      </div>
                      <div class="form-group">
                        <label for="experience">Experience required*</label>
                        <select class="form-control" name="experience" style="margin-top: 2%;" required>
                            <option>0-1 years</option>
                            <option>1-3 years</option>
                            <option>3-5 years</option>
                            <option>5-10 years</option>
                            <option>10+ years</option>
                          </select>
                      </div>
        
                      <div class="form-group">
                            <label for="skills">Skills required*</label>
                        <div class="field_wrapper5"></div>
                        <br />
                        <button class="button default btn btn-default add_button5">
                          Add
                        </button>
                      </div>
                      
                      <div class="form-group">
                        <label for="description">Job Description*</label>
                        <textarea class="form-control" id="description" placeholder="A short paragraph describing the role" name="description" required></textarea>
                      </div>
                      <div class="form-group">
                        <label for="salary">Salary/Stipend (in Rs)*</label>
                        <input type="number" class="form-control" id="salary" placeholder="Enter amount here" name="salary" required />
                      </div>
                      
                      <button type="submit" class="button primary btn btn-primary">
                        Submit
                      </button>
                      <button type="reset" style="background-color: red;" class="button btn btn-warning">
                        Reset
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </section>
    </div>
    <div id="notify_message" class="notify_message-success"></div>
    <%- include('../components/footer') -%>
  </body>

  <script src="/scripts/vendor/breakpoints.min.js"></script>
  <script src="/scripts/vendor/browser.min.js"></script>
  <script src="/scripts/vendor/classie.js"></script>
  <script src="/scripts/vendor/main.js"></script>
  <script src="/scripts/vendor/jquery.scrolly.min.js"></script>
  <script src="/scripts/util.js"></script>
  <script src="/scripts/menu-form.js"></script>
  <script src="/scripts/vendor/modernizr.custom.js"></script>
  <script src="/scripts/vendor/notificationFx.js"></script>
</html>
